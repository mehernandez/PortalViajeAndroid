<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent" android:orientation="horizontal"
        android:layout_height="match_parent" android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent" android:orientation="vertical"
            android:layout_height="match_parent" android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent" android:orientation="horizontal"
                android:layout_height="match_parent" android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent" android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:background="@drawable/llaves"/>
                <TextView
                    android:layout_width="match_parent" android:layout_weight="1" android:id="@+id/nombre_ofertas_realizadas"
                    android:layout_height="match_parent" android:text="Juan Salvador Mendoza"
                    android:textSize="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent" android:orientation="horizontal"
                android:layout_height="match_parent" android:layout_weight="1">
                <ImageView
                    android:layout_width="match_parent" android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:id="@+id/calif_ofertas_realizadas"/>
                <TextView
                    android:layout_width="match_parent" android:text="(8)" android:id="@+id/numeroCalificacion_ofertas_realizadas"
                    android:layout_height="match_parent"  android:layout_weight="1"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent" android:orientation="horizontal" android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent" android:layout_weight="1" android:id="@+id/correo_ofertas_realizadas"
                    android:layout_height="match_parent"  android:textSize="9dp"
                    android:gravity="center"/>
                <ImageView
                    android:layout_width="match_parent" android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:id="@+id/medio_ofertas_realizadas"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent" android:orientation="vertical"
            android:layout_height="match_parent" android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent" android:layout_weight="1"
                android:layout_height="match_parent" android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent" android:orientation="vertical"
                    android:layout_height="match_parent" android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent" android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/sentido"/>
                    <TextView
                        android:layout_width="match_parent" android:layout_weight="1" android:id="@+id/orientaciÃ³n_ofertas_realizadas"
                        android:layout_height="match_parent" android:text="Hacia la Universidad"
                        android:textSize="10dp" android:gravity="center"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent" android:orientation="vertical"
                    android:layout_height="match_parent" android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent" android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/reloj"/>
                    <TextView
                        android:layout_width="match_parent" android:layout_weight="1" android:id="@+id/hora_ofertas_realizadas"
                        android:layout_height="match_parent" android:text="11:00 AM"
                        android:gravity="center"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent" android:orientation="vertical"
                    android:layout_height="match_parent" android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent" android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/precio"/>
                    <TextView
                        android:layout_width="match_parent" android:layout_weight="1" android:id="@+id/precio_ofertas_realizadas"
                        android:layout_height="match_parent" android:text="$2000"
                        android:gravity="center"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent" android:orientation="horizontal"
                android:layout_height="match_parent" android:layout_weight="1">
                <ImageView
                    android:layout_width="match_parent" android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:background="@drawable/carro"/>

                <TextView
                    android:layout_width="match_parent" android:layout_weight="1" android:id="@+id/descripcion_ofertas_realizadas"
                    android:layout_height="match_parent" android:text="Una ruta supremamente larga , que pereza" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent" android:layout_weight="2.5" android:orientation="horizontal"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent" android:layout_weight="2" android:gravity="center"
            android:layout_height="match_parent" android:text="Estado :"/>
        <TextView
            android:layout_width="match_parent" android:layout_weight="1" android:textSize="20dp" android:gravity="center_vertical"
            android:layout_height="match_parent" android:text="Cancelada" android:id="@+id/estado_ofertas_realizadas"
            android:textColor="@color/red"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent" android:layout_weight="2.2" android:layout_margin="20dp"
        android:layout_height="match_parent" android:text="Cancelar Solicitud"
        android:background="@color/red" android:id="@+id/btn_cancelar_ofertas"
        android:textColor="@color/white"/>

</LinearLayout>