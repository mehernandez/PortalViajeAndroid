<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="@color/beigue"
    tools:context="com.equinox.mariohernandez.portalviaje.ViajesDisponiblesFragment">


    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
        android:text="Aquí encuentras todos los viajes disponibles dentro de los próximos 3 días. Puedes solicitar un cupo directamente desde aquí"
        android:layout_weight="4"
        android:gravity="center"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="none"
        android:id="@+id/listViewViajesDisponibles"
        android:layout_weight="1">

    </ListView>

</LinearLayout>
